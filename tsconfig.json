{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"],
      "@controllers/*": ["./controllers/*"],
      "@lib/*": ["./lib/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@routes/*": ["./routes/*"],
      "@graphql/*": ["./graphql/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*"]
}
